{
    "compilerOptions": {
        "target": "ES5",
        //"module": "umd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": ["es7", "dom"],
        "rootDir": "src",
        "outDir": "build",
        "declaration": true, 
        "declarationDir": "build/types",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node", "mocha", "chai"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react"
    },
    "files": [
        "src/main/js-reactify.ts",
        "src/demo/demo.tsx"
    ]
}
